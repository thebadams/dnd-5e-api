{
  "name": "dnd-5e-api",
  "version": "1.0.0",
  "description": "An API For Dungeons and Dragons 5th Edition, developed using a TDD mindset and TypeScript",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint:fix && npm run test:run",
    "test:run": "jest --runInBand",
    "compile": "npm run lint:fix && tsc",
    "install": "cd ./src/services/api/ && npm install",
    "start": "node ./lib/services/api/index.js",
    "start:dev": "ts-node-dev ./src/services/api/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebadams/dnd-5e-api.git"
  },
  "author": "thebadams",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thebadams/dnd-5e-api/issues"
  },
  "homepage": "https://github.com/thebadams/dnd-5e-api#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8"
  },
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^6.0.13"
  }
}
